@page
@model Razor_UTC.Pages.ContactUs.ContactModel
@{
    ViewData["Title"] = "Contact Us";
}
<form method="post" class="mt-3">
    <div class="form-row row">
        <div class="col-md-4 mb-3">
            <div class="form-group">
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <label asp-for="Users.FName"></label>
                <input type="text" asp-for="Users.FName" placeholder="Enter Your First Name" class="form-control" />
                <span class="text-danger" asp-validation-for="Users.FName"></span>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="form-group">
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <label asp-for="Users.LName"></label>
                <input type="text" asp-for="Users.LName" placeholder="Enter Your Last Name" class="form-control" />
                <span class="text-danger" asp-validation-for="Users.LName"></span>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="form-group">
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <label asp-for="Users.EmailAddress"></label>
                <input type="email" asp-for="Users.EmailAddress" placeholder="Enter Your Email Address" class="form-control" />
                <span class="text-danger" asp-validation-for="Users.EmailAddress"></span>
            </div>
        </div>
    </div>
    <div class="form-row row">
        <div class="col-md-4 mb-3">
            <div class="form-group">
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <label asp-for="Users.Password"></label>
                <input type="password" asp-for="Users.Password" placeholder="Enter Your Password" class="form-control" />
                <span class="text-danger" asp-validation-for="Users.Password"></span>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="form-group">
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <label asp-for="Users.ConfirmPassword"></label>
                <input type="password" asp-for="Users.ConfirmPassword" placeholder="Enter Your Confirm Password" class="form-control" />
                <span class="text-danger" asp-validation-for="Users.ConfirmPassword"></span>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="form-group">
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <label asp-for="Users.PhoneNumber"></label>
                <input type="number" asp-for="Users.PhoneNumber" placeholder="Enter Your 10 digit Mobile Number" class="form-control" />
                <span class="text-danger" asp-validation-for="Users.PhoneNumber"></span>
            </div>
        </div>
    </div>
    <div class="form-row row">
        <div class="col-md-4 mb-3">
            <div class="form-group">
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <label asp-for="Users.Id"></label>
                <input type="number" asp-for="Users.Id" placeholder="Enter User Id" class="form-control" />
                <span class="text-danger" asp-validation-for="Users.Id"></span>
            </div>
        </div>
    </div>
    <div class="form-group mb-3">
        <input type="submit" value="Submit" class="btn btn-primary" />
    </div>
</form>


