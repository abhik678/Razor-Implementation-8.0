@if(User == null || User.Identity == null || User.Identity.IsAuthenticated)
{
    <form method="post" asp-page="Authentication/SignOut">
        @{ var user = @User?.Identity?.Name; }
        <span class="text-white">@user</span>
        <button type="submit" class="btn btn-link text-white text-decoration-none">Sign Out</button>
    </form>
}
else 
{
    <a class="btn btn-link text-white text-decoration-none" asp-area="" asp-page="Authentication/SignIn">LOGIN</a> 

    <a class="btn btn-link text-white text-decoration-none" asp-area="" asp-page="Authentication/Registration">REGISTER</a>
}

